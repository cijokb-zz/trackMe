{
  "globals": {
    "Map": true,
    "Promise": true,
    "describe": true,
    "it": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "curly": ["warn", "all"],
    "default-case": ["warn"],
    "dot-location": ["warn", "property"],
    "eqeqeq": ["warn"],
    "guard-for-in": ["warn"],
    "no-else-return": ["warn"],
    "no-empty-function": ["warn"],
    "no-eq-null": ["warn"],
    "no-fallthrough": ["warn"],
    "no-floating-decimal": ["warn"],
    "no-implicit-globals": ["off"],
    "no-invalid-this": ["warn"],
    "no-lone-blocks": ["warn"],
    "no-loop-func": ["warn"],
    "no-multi-spaces": ["warn", {"exceptions": {"Property": true}}],
    "no-new": ["warn"],
    "no-new-wrappers": ["warn"],
    "no-redeclare": ["warn", {"builtinGlobals": true}],
    "no-return-assign": ["warn"],
    "no-self-assign": ["warn"],
    "no-self-compare": ["warn"],
    "no-sequences": ["warn"],
    "no-throw-literal": ["warn"],
    "no-unused-expressions": ["warn", {"allowShortCircuit": true, "allowTernary": true}],
    "no-useless-escape": ["warn"],
    "vars-on-top": ["warn"],
    "wrap-iife": ["warn"],
    "yoda": ["warn"],
    "strict": ["warn", "global"],
    "init-declarations": ["warn", "always"],
    "no-shadow": ["warn", {"builtinGlobals": true, "hoist": "never", "allow": ["event"]}],
    "no-shadow-restricted-names": ["warn"],
    "no-undef": ["warn"],
    "no-undef-init": ["warn"],
    "no-undefined": ["warn"],
    "no-unused-vars": ["warn", {"vars": "local", "args": "all"}],
    "no-use-before-define": ["warn", {"functions": false, "classes": false}],
    "global-require": ["warn"],
    "no-mixed-requires": ["warn"],
    "array-bracket-spacing": ["warn", "never"],
    "block-spacing": ["warn", "always"],
    "brace-style": ["warn", "1tbs", {"allowSingleLine": false}],
    "camelcase": ["warn", {"properties": "always"}],
    "comma-spacing": ["warn", {"before": false, "after": true}],
    "comma-style": ["warn", "last"],
    "computed-property-spacing": ["warn", "never"],
    "consistent-this": ["warn", "me", "self"],
    "eol-last": ["warn"],
    "id-blacklist": ["warn", "err", "arr", "callback", "f", "func", "something"],
    "id-length": ["warn", {"min": 2, "properties": "always", "exceptions": ["_", "$"]}],
    "indent": ["warn", 4],
    "jsx-quotes": ["warn", "prefer-double"],
    "key-spacing": ["warn", {"beforeColon": false, "afterColon": true}],
    "keyword-spacing": ["warn", {"before": true, "after": true, "overrides": {}}],
    "max-depth": ["warn", 12],
    "max-len": ["warn", 120],
    "new-cap": ["warn"],
    "no-lonely-if": ["warn"],
    "no-mixed-spaces-and-tabs": ["warn", "smart-tabs"],
    "no-negated-condition": ["warn"],
    "no-nested-ternary": ["warn"],
    "no-spaced-func": ["warn"],
    "no-trailing-spaces": ["warn", {"skipBlankLines": true}],
    "no-unneeded-ternary": ["warn", {"defaultAssignment": true}],
    "no-whitespace-before-property": ["warn"],
    "operator-linebreak": ["warn", "before"],
    "padded-blocks": ["warn", "never"],
    "quotes": ["warn", "single", "avoid-escape"],
    "semi": ["warn", "always"],
    "semi-spacing": ["warn", {"before": false, "after": true}],
    "space-before-blocks": ["warn", "always"],
    "space-in-parens": ["warn", "never"],
    "space-infix-ops": ["warn", {"int32Hint": false}],
    "space-unary-ops": ["warn", {"words": true, "nonwords": false}],
    "arrow-body-style": ["warn", "as-needed"],
    "arrow-spacing": ["warn", {"before": true, "after": true}],
    "constructor-super": ["warn"],
    "no-class-assign": ["warn"],
    "no-confusing-arrow": ["warn"],
    "no-const-assign": ["warn"],
    "no-dupe-class-members": ["warn"],
    "no-this-before-super": ["warn"],
    "no-useless-constructor": ["warn"],
    "no-var": ["warn"],
    "object-shorthand": ["off"],
    "prefer-const": ["warn"],
    "template-curly-spacing": ["warn", "never"],

    "react/jsx-uses-vars": ["warn"],
    "react/jsx-uses-react": ["warn"]
  }
}